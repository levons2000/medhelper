<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5ab6f7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/call_to_hospital"
                android:layout_alignParentStart="true"
                android:id="@+id/name_of_hospital"
                android:text="Blablsada"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/call_to_hospital"
                android:layout_alignParentStart="true"
                android:id="@+id/hasce_of_hospital"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="italic"
                android:layout_below="@+id/name_of_hospital"
                android:text="dsadsadsa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/call_to_hospital"
                android:layout_alignParentStart="true"
                android:id="@+id/number_of_hospital"
                android:layout_marginLeft= "5dp"
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="italic"
                android:layout_below="@+id/hasce_of_hospital"
                android:text="dsadsadsa"/>

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/call_to_hospital"
                android:layout_marginRight="15dp"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_phone_in_talk_black_24dp"
                android:background="@null"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>